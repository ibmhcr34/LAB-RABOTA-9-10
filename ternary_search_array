def ternary_search_array(arr, target):
    # границы для поиска
    left, right = 0, len(arr) - 1

    # пока есть что проверять
    while left <= right:
        # делим участок на три части
        mid1 = left + (right - left) // 3
        mid2 = right - (right - left) // 3

        # проверяем найденные точки
        if arr[mid1] == target:
            return mid1
        if arr[mid2] == target:
            return mid2

        # выбираем куда идти дальше
        if target < arr[mid1]:
            right = mid1 - 1
        elif target > arr[mid2]:
            left = mid2 + 1
        else:
            left = mid1 + 1
            right = mid2 - 1

    return -1


def ternary_search_recursive(arr, target, left, right):
    # если область пустая — ничего нет
    if left > right:
        return -1

    # вычисляем точки деления
    mid1 = left + (right - left) // 3
    mid2 = right - (right - left) // 3

    # проверяем совпадения
    if arr[mid1] == target:
        return mid1
    if arr[mid2] == target:
        return mid2

    # выбираем нужную зону
    if target < arr[mid1]:
        return ternary_search_recursive(arr, target, left, mid1 - 1)
    elif target > arr[mid2]:
        return ternary_search_recursive(arr, target, mid2 + 1, right)
    else:
        return ternary_search_recursive(arr, target, mid1 + 1, mid2 - 1)


# вывод без слов
def test_ternary():
    arr = [2, 3, 4, 10, 15, 18, 20, 23, 35, 40, 45, 50, 60, 70, 80, 90, 100]
    targets = [10, 35, 100, 5, 95]

    print(arr)
    for t in targets:
        print(ternary_search_array(arr, t))

test_ternary()
